<h2>Resend confirmation instructions</h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class = "control-group string required">
    <%= f.label :email, :class => "string required control-label" %>
    <div class = "controls">
      <%= f.email_field :email %>
    </div>
  </div>


  <div class="form-actions"><%= f.submit "Resend confirmation instructions", :class => "btn btn-primary" %></div>

<% end %>

<%= render "links" %>