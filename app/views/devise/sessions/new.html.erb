<h2>Sign in</h2>

<%= form_for(resource, :html => { :class => "simple_form form-horizontal"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class = "control-group string required">
    <%= f.label :email, :class => "string required control-label" %>
    <div class = "controls">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class = "control-group string required">
    <div class = "control-group string required">
      <%= f.label :password, :class => "string required control-label" %>
      <div class = "controls">
        <%= f.password_field :password %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group boolean optional">
      <%= f.label :remember_me, :class => "boolean optional control-label" %>
      <div class="controls">
        <input type="hidden" value="0" name="article[published]">
        <%= f.check_box :remember_me, %>
      </div>
    </div>
  <% end -%>

  <div class="form-actions"><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
<% end %>

<%= render "links" %>