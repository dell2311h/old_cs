<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "simple_form form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class = "control-group string required">
    <%= f.label :email, :class => "string required control-label" %>
    <div class = "controls">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="form-actions"><%= f.submit "Send me reset password instructions", :class => "btn btn-primary" %></div>

<% end %>

<%= render "links" %>